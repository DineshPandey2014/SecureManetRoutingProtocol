</head>
<body>
  <img border="0" src="net.jpg" width=100%; height="20%";/>
  <div></div>
   <ul class="top-menu">
      <li><a href="/home">Home</a></li>
      <li><a href="#">Sender Node</a></li>
  </ul>
   <div id="break" style="clear:both;"></div>
   <div class="row">&nbsp;</div>

  <div>
      <table>
         <thead>
          <tr>
              <th>Sender</th>
              <th>&nbsp;</th>
              <th>Status</th>
          </tr>
          </thead>
          <tbody>
          <form action="/form" method="POST" >
              <tr>Select Node</tr>
          <tr>
              <select name="selectNode">
                  <option  value="NodeTwo">Node Two</option>
                  <option  value="NodeFour">Node Four</option>
              </select>
          </tr>
          <tr>
               <td>
                      <div>
                          <div class="row">
                              <div class="col-xs-10  ">
                                 <textarea class="form-control" name="userdata" rows="13" cols="8" style="width: 500px"
                                            placeholder="This data send to other node." required></textarea>
                              </div>
                          </div>
                      </div>
                      <div class ="row">&nbsp;</div>
                      <button type="submit" class="btn btn-info">Send</button>
                      <button class="btn btn-info" type="reset">Reset</button>
               </td>
              <td>&nbsp;</td>
              <form action="/restMsessage" method="POST" >
              <td style="vertical-align:top">
                  <textarea class="form-control" name="statusMesg" rows="13" cols="8" style="width: 500px"><%= statusmessageNodeOne %></textarea>
              </td>
              </form>

            </tr>

          </form>
          </tbody>
      </table>
  </div>
</body>
